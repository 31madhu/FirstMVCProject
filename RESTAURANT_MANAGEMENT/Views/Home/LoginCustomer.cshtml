@{
    ViewData["Title"] = "LoginCustomer";

<style>
        body {
            margin: 0;
            padding: 0;
            background-color: #6abadeba;
            font-family: 'Arial';
        }

        .login {
            width: 382px;
            overflow: hidden;
            margin: auto;
            margin: 20 0 0 450px;
            padding: 80px;
            
            border-radius: 15px;
        }

        h2 {
            text-align: center;
            color: #277582;
            padding: 20px;
        }

        label {
            color: black;
            font-size: 17px;
        }

        #Uname {
            width: 300px;
            height: 30px;
            border: none;
            border-radius: 3px;
            padding-left: 8px;
        }

        #Pass {
            width: 300px;
            height: 30px;
            border: none;
            border-radius: 3px;
            padding-left: 8px;
        }

        #log {
            width: 300px;
            height: 30px;
            border: none;
            border-radius: 17px;
            padding-left: 7px;
            color: blue;
        }

        span {
            color: white;
            font-size: 17px;
        }

       
</style>
   

<h2>Login Page</h2><br>
    <div class="login">
        
        <form id="login" method="post" asp-controller="Home" asp-action="LoginCustomer">
            <label> <b> UserId </b>       
        </label>
            <input type="number" name="CustomerId" id="Uname" placeholder="Id">
        <br><br>
        <label><b>User Name
        </b>
        </label>
        <input type="text" name="CustomerName" id="Pass" placeholder="Name">
        <br><br>
        <button type="submit" class="btn btn-success" > Log IN </button>
        
    </form>
    </div>
}


    